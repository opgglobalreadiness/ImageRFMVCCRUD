    <script>
        var Popup, dataTable;

        $(document).ready(function () {
            dataTable=$("#imageRequestTable").DataTable({
                "ajax": {
                    "url": "/ImageRequest/GetData",
                    "type": "GET",
                    "headers": { "Accept": "application/json; odata=nometadata" },
                    "contentType": "application/json; charset=utf-8",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "ImageRFId" },
                    { "data": "Requestor" },
                    { "data": "InquiryCategory" },
                    { "data": "TeamName" },
                    { "data": "ReviewRequestTitle" },
                    {
                        "data": "DateRequested",
                        "type": "date ",
                        "render": function (value) {
                            if (value === null) return "";

                            var pattern = /Date\(([^)]+)\)/;
                            var results = pattern.exec(value);
                            var dt = new Date(parseFloat(results[1]));

                            return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                        }
                    },
                    {
                        "data": "ProductReleaseDate",
                        "type": "date ",
                        "render": function (value) {
                            if (value === null) return "";

                            var pattern = /Date\(([^)]+)\)/;
                            var results = pattern.exec(value);
                            var dt = new Date(parseFloat(results[1]));

                            return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                        }
                    },
                    {
                        "data": "ImageRFId", "render": function (data) {
                            return "<a class='btn btn-default btn-sm' style='margin-right:3px' onclick=PopupForm('@Url.Action("AddOrEdit","ImageRequest")/" + data + "')><i class='fa fa-pencil'></i> Edit</a>" +
                                "<a class='btn btn-default btn-sm' style='margin-right:3px'  onclick=PopupReviewForm('@Url.Action("Review","ImageRequest")/" + data + "')><i class='fa fa-pencil'></i> Review</a>" +
                                "<a class='btn btn-danger btn-sm' onclick=Delete(" + data + ") > <i class='fa fa-trash'></i> Delete</a > ";
                        },
                        "orderable": false,
                        "searchable": false,
                        //"width": "190px"
                        "width": "340px"
                    }
                ],
                "language": {
                    "emptyTable": "No data found! Please click the <b>Add New</b> button"
                }
            });

        });

        function PopupForm(url) {
            var formDiv = $('<div />');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        //hide: "puff",
                        show: "slide",
                        resizable: true,
                        //resize: function (event, ui) {
                        //    $(this).dialog("option", "title",
                        //        ui.size.height + " x " + ui.size.width);
                        //},
                        title: 'IMAGE REQUEST FORM',
                        height: 750,
                        width: 850,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }


        function PopupReviewForm(url) {
            localStorage.setItem('requestID', url)
            var formDiv = $('<div />');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        //hide: "puff",
                        show: "slide",
                        resizable: true,
                        //resize: function (event, ui) {
                        //    $(this).dialog("option", "title",
                        //        ui.size.height + " x " + ui.size.width);
                        //},
                        title: 'IMAGE REVIEWER TOOL',
                        height: 750,
                        width: 1250,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                })
            }
            return false;
        }

        function Delete(id) {
            if (confirm('Are you sure you want to delete this request id ' + id + '?')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "ImageRequest")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                })
            }
        }

